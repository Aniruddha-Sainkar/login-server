<%- include('header'); -%>

<!-- Template for /login route -->

<p>
  By using this service, you agree that authenticated usernames, identifiers, and access tokens can be made available to selected applications (see <a href="<%= baseUrl %>help">about this service</a> for details).
</p>

<% config.providers.forEach(provider => { %>
<p>
  <a class="btn btn-light btn-block" href="<%= baseUrl %>login/<%= provider.id %>">
    <% if (provider.image) { %>
    <img src="<%= provider.image %>" height="20px" style="margin-right: 5px;" />
    <% } %>
    Login via <%= provider.name %>
  </a>
</p>
<% }) %>

<p>
  If necessary, a new user account will be created on first login.
</p>

<%- include('footer'); -%>
